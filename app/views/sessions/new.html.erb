<div class="splash">
  <a href="/auth/github" class="btn">
    <i class="fa fa-github"></i>
    Sign in with Github
  </a>

<script>
  $(function () {
    var entrance = _.sample([
      'flip',
      'bounceIn',
      'bounceInDown',
      'bounceInLeft',
      'bounceInRight',
      'bounceInUp',
      'fadeIn',
      'fadeInDown',
      'fadeInLeft',
      'flipInX',
      'flipInY',
      'rotateIn',
      'rotateInDownLeft',
      'rotateInDownRight',
      'rollIn',
      'zoomIn'
    ]);
    console.log('Every exit is a ' + entrance + ' somewhere else.');
    $('.btn').addClass('animated ' + entrance);
  });
</script>

  <ul class="leaders animated fadeInUp">
    <% Project.order(:votes_count).limit(5).each do |p| %>
      <li><a href="http://<%= p.url %>"><%= p.title %></a></li>
    <% end %>
  </ul>
</div>
